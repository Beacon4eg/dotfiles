#!/bin/bash

set -e

repos=$(git remote)
if [[ $repos == *"upstream"* ]]; then
    default_repo="upstream"
else
    default_repo="origin"
fi
default_branch=$(git remote show $default_repo | grep 'HEAD branch' | cut -d' ' -f5)

git fetch $default_repo
git checkout $default_branch
git rebase "$default_repo/$default_branch"
